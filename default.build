<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="castle-binder-component"
	default="build"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="common.scripts.dir" value="buildscripts" />
	<include buildfile="${common.scripts.dir}/common-project.xml" />

	<fileset id="buildfiles.all">
		<!-- Files have to be in dependency order -->
		<include name="src/Castle.Components.Binder/default.build" />
		<include name="src/Castle.Components.Binder.Tests/default.build" if="${common.testrunner.enabled}" />
	</fileset>

	<patternset id="package.bin.set" >
		<include name="Castle.*.*" />
		<include name="**/*.resources.dll" />
		<include name="log4net.*" />
		<include name="NLog.*" />
		<exclude name="Castle.Components.*.Tests.*" />
		<exclude name="**/*.Tests.resources.dll" />
		<exclude name="/net-3.5/*" />
	</patternset>

	<patternset id="ndepend.bin.set" >
		<include name="Castle.Components.Binder.dll" />
	</patternset>

	<target name="build" depends="common.build" />

</project>
